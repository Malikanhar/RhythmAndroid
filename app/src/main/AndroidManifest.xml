<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.buahbatu.rhythm">

    <!--PAHO MQTT SERVICE PERMISSION-->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />  <!--FAST NETWORK PERMISSION-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!--CALL PERMISSION-->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_square"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name="com.buahbatu.rhythm.MyApp"
        android:theme="@style/AppTheme">
        <service android:name="org.eclipse.paho.android.service.MqttService" />

        <activity android:name="com.buahbatu.rhythm.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.buahbatu.rhythm.HomeActivity" />
        <activity
            android:name="com.buahbatu.rhythm.AboutActivity"
            android:label="@string/about" />
        <activity
            android:name="com.buahbatu.rhythm.RegisterActivity"
            android:label="@string/welcome_name" />
        <activity
            android:name="com.buahbatu.rhythm.NotificationActivity"
            android:label="@string/notification" />
        <activity
            android:name="com.buahbatu.rhythm.DetailActivity"
            android:label="@string/detail" />
    </application>

</manifest>